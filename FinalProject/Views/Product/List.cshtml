@model IEnumerable<FinalProject.ViewModels.CProductViewModel>

@{
    ViewData["Title"] = "商品管理";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">
        商品管理
    </h1>
    <p>
        <a class="btn btn-primary" asp-action="Create">新增商品</a>
    </p>
</div>
<div class="card mb-4">
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>
                        序號
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FImagePath)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FPeriod)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FProvider)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FCost)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FPrice)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    int count = 0;
                    foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>
                                @count
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FId)
                            </td>
                            <td>
                                <img src="~/images/@item.FImagePath" width="80" height="50">
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FPeriod)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FProvider)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FCost)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FPrice)
                            </td>
                            <td>
                                @Html.ActionLink("詳細", "Details", "Product", new { id = item.FId  }, new { Class = "btn btn-secondary" })
                                @Html.ActionLink("修改", "Edit", "Product", new { id = item.FId  }, new { Class = "btn btn-success" })
                                @Html.ActionLink("下架", "Delete", "Product", new { id = item.FId }, new { Class = "btn btn-danger", onclick = "return confirm('下架後商品將不再顯示於列表中，但資料會留存備查！')" })
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
