@model IEnumerable<FinalProject.ViewModels.CCustomerViewModel>

@{
    ViewData["Title"] = "會員管理";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">
        會員管理
    </h1>
    <p>
        <a class="btn btn-primary " asp-action="Create">新增會員</a>
    </p>
</div>
<div class="card mb-4">
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>
                        序號
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FCustomerId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FLastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FFirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FGender)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FTel)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FMobile)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FEmail)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FBirthDate)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    int count = 0;
                    foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>
                                @count
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FCustomerId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FLastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FFirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FGender)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FTel)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FMobile)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FEmail)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FBirthDate)
                            </td>
                            <td>
                                @Html.ActionLink("詳細", "Details", "Customer", new {  id=item.FCustomerId } , new {@class="btn btn-secondary"})
                                @Html.ActionLink("修改", "Edit", "Customer", new {  id=item.FCustomerId } , new {@class="btn btn-success"})
                                @Html.ActionLink("刪除", "Delete", "Customer", new { id = item.FCustomerId }, new { onclick = "return confirm('確定要刪除嗎?')" , @class="btn btn-danger"})
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
